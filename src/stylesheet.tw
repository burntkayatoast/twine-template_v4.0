:: StoryStylesheet [stylesheet]
/* FONT IMPORTS */
@import url('https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Pirata+One&family=Spectral:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap');

@font-face {
  font-family: "Open Dyslexic";
  src: url("https://dl.dropbox.com/s/z61rc6kecqzn2pm/OpenDyslexic-Regular.woff2")format("woff2"),
	    url("https://dl.dropbox.com/s/7utsi12557865ty/OpenDyslexic-Regular.woff")format("woff"),
      url("https://dl.dropbox.com/s/1q7eh2yte04g3z5/OpenDyslexic-Regular.otf")format("otf");
}

/* ICON IMPORT */


:root {
  --bodyfont: "Inter", sans-serif;
  --serif:  "Spectral", serif;
  --openDyslexic: 'Open Dyslexic', sans-serif;
  --displayfont: "Pirata One", system-ui;

  --darkbg: #1a1a1a;
  --grey: #333;
  --white: #c6c6c6;
  --accent: #ab996d;
  --accent2: #c4b286;
  --red: #7d1c1f;
}

.openDyslexic body {
  font-family: var(--openDyslexic);
} 
.serif body {
  font-family: var(--serif);
}

body {
  background-color: var(--white);
  font-family: var(--bodyfont);
  height: 100vh; 
  width: 100vw;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  box-sizing: border-box;
  
}
.dark body, .sun body {background-color: var(--darkbg);}

#passage-container { 
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  width: 100vw;  
  box-sizing: border-box;
}

#passages {
  background-color: var(--white);
  color: var(--darkbg);
  font-size: 17px;
  line-height: 1.6;
  width: 65vw;
  max-width: 1400px;
  max-height: 50vh; 
  margin-top: 5em;
  padding: 0 1em;
  box-sizing: border-box;
  overflow-y: auto;
  text-align: justify;
  scrollbar-width: none;

  /* New centering properties */
  display: flex;
  flex-direction: column;
  align-items: center;
}
.dark #passages, .sun #passages {
  background-color: var(--darkbg);
  color: var(--white);
}

#passages::-webkit-scrollbar {display: none;}
#passages p, #passages div, #passages span {
  text-align: justify;
}

/* links */
a {
  text-decoration: none;
  background-color: none;
  color: inherit;
}

a:hover {
  text-decoration: none;
  background-color: none;
  color: inherit;
}

/********************************
              MISC 
********************************/
h2 { 
  text-align: center;
  font-size: 450%;
  letter-spacing: 5px;
  margin: 0;
  font-family: var(--displayfont);
}

/* divider */
.divider { 
  width: 100%;
  height: 2.5px;
  background: linear-gradient(to right,
        transparent,
        rgba(26, 26, 26, 0.4),  /* 1a1a1a at 30% opacity */
        rgba(26, 26, 26, 0.7),  /* 1a1a1a at 70% opacity */
        var(--darkbg),
        var(--darkbg),            /* Full color in middle */
        rgba(26, 26, 26, 0.7),
        rgba(26, 26, 26, 0.4),
        transparent);
  border: none;
}
.dark .divider, .sun .divider { 
  background: linear-gradient(to right,
        transparent,
        rgba(198, 198, 198, 0.4),
        rgba(198, 198, 198, 0.7),
        var(--white),
        var(--white),
        rgba(198, 198, 198, 0.7),
        rgba(198, 198, 198, 0.4),
        transparent);
}

/* line text line */
.LTL {
  display: flex;
  align-items: center;
  text-align: center;
  letter-spacing: 3px;
  font-size: 1.2em;
  width: 100%;
  margin: 1em 0;
}

.LTL span { 
  font-family: var(--displayfont);
  color: var(--grey);
  font-size: 225%;
}
.dark .LTL span, .sun .LTL span { 
  color: var(--white);
} 

.LTL::before,
.LTL::after {
  content: '';
  flex: 1;
  height: 2.5px;
}

.LTL:not(:empty)::before {
  margin-right: 0.5em;
  background: linear-gradient(
    to right,
    transparent,
    rgba(26, 26, 26, 0.4),
    rgba(26, 26, 26, 0.7),
    var(--darkbg)
  );
}
.dark .LTL:not(:empty)::before, .sun .LTL:not(:empty)::before { 
  background: linear-gradient(
    to right, 
    transparent,
    rgba(198, 198, 198, 0.4),
    rgba(198, 198, 198, 0.7),
    var(--white)
  );
}

.LTL:not(:empty)::after {
  margin-left: 0.5em;
  background: linear-gradient(
    to left, 
    transparent,
    rgba(26, 26, 26, 0.45),
    rgba(26, 26, 26, 0.7),
    var(--darkbg)
  );
}

.dark .LTL:not(:empty)::after, .sun .LTL:not(:empty)::after { 
  background: linear-gradient(
    to left, 
    transparent,
    rgba(198, 198, 198, 0.45),
    rgba(198, 198, 198, 0.7),
    var(--white)
  );
}

/* chapter title */
.chapter-title { 
  font-family: var(--displayfont);
  text-transform: capitalize;
  font-size: 300%;
  margin-top: -.3em;
  letter-spacing: 15px;
  text-align: center !important;
  padding: 0;
  font-weight: bold;
  color: var(--grey);
}
.dark .chapter-title, .sun .chapter-title { 
  color: var(--white);
}
/********************************
          STAT PAGES
********************************/
.return { 
  font-family: var(--displayfont);
  color: var(--accent);
  font-size: 190%;
  letter-spacing: 10px;
  text-align: center !important;
  transition: .4s ease-in-out;
}
.dark .return, .sun .return { 
  color: var(--accent);
}

.return:hover { 
  color: var(--red);
}
.dark .return:hover, .sun .return:hover { 
  color: var(--accent2);
}

/********************************
        COLLAPSIBLE BTN
********************************/
.collapsible-container { 
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  margin: 0 auto;
}

.collapsible { 
  background-color: var(--darkbg);
  color: var(--white);
  width: 75%;
  cursor: pointer;
  border: none;
  text-align: left;
  outline: none;
  transition: .5s ease-in-out;
  font-family: var(--bodyfont);
  text-transform: uppercase;
  padding: 1.5em 0;
}
.dark .collapsible, .sun .collapsible { 
  background-color: var(--white);
  color: var(--darkbg);
}

.collapsible span { 
  margin: 0 1.2em;
  font-size: 110%;
  letter-spacing: 5px;
  font-weight: bold;
}

.collapsible:hover { 
  background-color: var(--accent2);
  color: var(--darkbg);
}

.collapsible:after { 
  content: '\002B';
  color: var(--white);
  float: right;
  margin-right: 25px;
}
.collapsible:hover:after { 
  color: var(--darkbg);
}
.dark .collapsible:after, .sun .collapsible:after { 
  color: var(--darkbg);
}

.collapsible.active:after { 
  content: '\2212';
}

.content {
  width: 75%; 
  padding: 0; 
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.2s ease-out;
  background-color: var(--grey);
  color: var(--white);
  margin-top: -1px;
}

.dark .content, .sun .content { 
  background-color: var(--grey);
  color: var(--white);
}

.content-inner { 
  padding: 0 20px;
}

/********************************
            NOTIFY   
********************************/
#notify { 
  position: fixed;
  font-weight: bold;
  text-align: center;
  overflow: hidden;
  background-color: var(--accent2);
  color: var(--darkbg);
  bottom: -5vh;
  width: 100%;
  padding: 0;
  transition: max-height .4s ease,
              bottom .4s ease,
              padding .4s ease;
}

#notify.open { 
  bottom: 0;
  max-height: 5vh;
  padding: 2em 0;
}

.notify-title { 
  font-family: var(--displayfont);
  color: var(--red);
  transition: .4s ease-in-out;
  font-size: 122%;
  letter-spacing: 1px;
}
.dark .notify-title, .sun .notify-title { 
  color: var(--accent);
}

.notify-title:hover { 
  color: var(--accent);
}
.dark .notify-title:hover, .sun .notify-title:hover { 
  color: var(--white);
}

/********************************
          CHOICE BTN   
********************************/

.choice {
  border-radius:3px;
  color: var(--darkbg);
  padding: 0.5em;
  transition: 0.3s ease-in-out;
}
.dark .choice, .sun .choice { 
  color: var(--white);
}
.choice:before {
  content: 'âœ¦';
  color: var(--accent);
  margin-right: 7px;
}
.choice:hover {color:var(--darkbg);}
.dark .choice:hover, .sun .choice:hover { 
  color: var(--accent);
}

.choicebtn {
  display:block;
  align-items:center;
  justify-content:center;
}
.choicebtn:hover .choice {
  opacity:.6;
  transform: scale(.98);
  box-shadow:none;
}
.choicebtn:hover .choice:hover{
  transform:scale(1);
  opacity:1;
}

.choice-cont { 
  width: 80%;
  margin: 0 auto;
}

/********************************
        HEADER + NAV 
********************************/
#header {
  background-color: var(--darkbg);
  border-bottom: 2px solid var(--white);
  position: fixed;
  top: 0;
  left: 0;
  height: 10%;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0 20px; 
  box-sizing: border-box;
}
.dark #header { 
  background-color: var(--white);
  border-bottom: 2px solid var(--white);
}
.sun #header { 
  background-color: var(--accent);
  border-bottom: 2px solid var(--accent);
}

#game-title {
  color: var(--white);
  font-family: var(--displayfont);
  font-size: 28px;
  position: absolute;
  text-transform: capitalize;
  left: 50px; 
  letter-spacing: 5px;
  white-space: nowrap;
}
.dark #game-title, .sun #game-title { 
  color: var(--darkbg);
}

#mobile-title {
  display: none;
  color: var(--white);
  font-family: var(--displayfont);
  text-transform: capitalize;
  font-size: 28px;
  letter-spacing: 5px;
  white-space: nowrap;
  position: absolute;
  left: auto;
}
.dark #mobile-title, .sun #mobile-title { 
  color: var(--darkbg);
}


#header-links {
  font-family: var(--serif);
  position: absolute;
  right: 50px;
  display: flex;
  font-size: 18px;
  letter-spacing: 2px;
  gap: 2em;
}
#header-links div, #footer-links div {
  color: var(--white);
  font-weight: bold;
  position: relative;
  cursor: pointer;
  transition: .3s ease-in-out;
  padding: 5px;
}
.dark #header-links div, .sun #header-links div { 
  color: var(--darkbg);
}

#header-links div:after, #footer-links div:after {
  content: ' ';
  position: absolute;
  width: 100%;
  transform: scaleX(0);
  height: 2px;
  bottom: 0;
  left: 0;
  background-color: var(--accent2);
  transform-origin: bottom left;
  transition: transform 0.4s ease-out;
}
.dark #header-links div:after, #footer-links div:after, .sun #header-links div:after, #footer-links div:after { 
  background-color: var(--darkbg);
}

#header-links div:hover {color:var(--accent2);}
.dark #header-links div:hover, .sun #header-links div:hover {color:var(--darkbg);}
#header-links div:hover:after {
  transform: scaleX(1);
  transform-origin: bottom left;
}


/********************************
              FOOTER 
********************************/
#footer {display: none;}

/********************************
            DIALOG BOX
********************************/
/* basic */
#ui-dialog { 
  position: fixed;
  top: 50%;
  left: 50%;
  margin: 1em; 
  width: auto;
  inset: auto !important; 
  border: 1px solid var(--white);
  color: var(--darkbg);
}
.dark #ui-dialog, .sun #ui-dialog { 
  border: 1px solid var(--darkbg);
  color: var(--white);
}

#ui-dialog-body {
  max-height: 70vh;
  text-align: center;
  background-color: var(--white);
  border: none;
  overflow: auto;
}
.dark #ui-dialog-body, .sun #ui-dialog-body { 
  background-color: var(--darkbg);
}

#ui-dialog-title {
  font-family: var(--displayfont);
  font-size: 26px;
  text-transform: lowercase;
  color: var(--darkbg);
  text-align: center;
  background-color: var(--white);
  padding: 1.5em;
  margin: 0;
  letter-spacing: 3px;
  font-weight: normal;
  border-bottom: .3px solid var(--grey);
}
.dark #ui-dialog-title, .sun #ui-dialog-title { 
  color: var(--white);
  background-color: var(--darkbg);
}

#ui-dialog-titlebar {
  border-bottom: 1px solid var(--white);
}
.dark #ui-dialog-titlebar, .sun #ui-dialog-titlebar { 
  border-bottom: 1px solid var(--darkbg);
}
#ui-dialog-close {
  background: none;
  font-size: 18px;
  border: none;
  color: var(--accent2);
  transition: color .3s ease-in-out;
}

#ui-dialog-close:hover {
  font-size: 18px;
  background: none;
  border: none;
  color: var(--red);
}

/* saves */
#ui-dialog-body.saves > h2 {display: none;}

#ui-dialog-body.saves #saves-list {
  border-collapse: none;
  border: none;
}
#ui-dialog-body.saves #saves-list td {
  padding: 12px !important;
}

#ui-dialog-body.saves #saves-list button {
  border: none;
  font-family: var(--bodyfont);
  width: auto;
  height: auto;
  white-space: nowrap;
}

#ui-dialog-body.saves #saves-list button.load:not(:disabled) {
  background: none;
  border: none;
}
#ui-dialog-body.saves #saves-list button.delete:not(:disabled) {
  background: none;
  border: none;
}

#ui-dialog-body.saves #saves-list button.load:hover, #ui-dialog-body.saves #saves-list button.save:hover, #ui-dialog-body.saves #saves-list button.delete:hover {
  background: none !important;
}


#ui-dialog-body.saves #saves-list button.load::before {
  content: "load"; 
  font-size: inherit;
  color: var(--darkbg); 
  text-transform: lowercase;
  letter-spacing: 2px;
  padding: .5em;
  background: none;
  font-family: var(--bodyfont) !important;
}
.dark #ui-dialog-body.saves #saves-list button.load::before, .sun #ui-dialog-body.saves #saves-list button.load::before { 
  color: var(--white);
}

#ui-dialog-body.saves #saves-list button.save::before {
  content: "save"; 
  font-size: inherit;
  color: var(--darkbg); 
  text-transform: lowercase;
  letter-spacing: 2px;
  padding: .5em;
  background: none;
  font-family: var(--bodyfont) !important;
}
.dark #ui-dialog-body.saves #saves-list button.save::before, .sun #ui-dialog-body.saves #saves-list button.save::before { 
  color: var(--white);
}

#ui-dialog-body.saves #saves-list button.delete::before {
  content: "delete"; 
  font-size: inherit;
  color: var(--darkbg); 
  text-transform: lowercase;
  letter-spacing: 2px;
  padding: .5em;
  background: none;
  font-family: var(--bodyfont) !important;
}
.dark #ui-dialog-body.saves #saves-list button.delete::before, .sun #ui-dialog-body.saves #saves-list button.delete::before { 
  color: var(--white);
}

#ui-dialog-body.saves .buttons {
  display: flex;
  justify-content: flex-start;
  gap: .5em;
  padding: .5em;
}
#ui-dialog-body.saves button {
  background: none !important;
  letter-spacing: 1px;
  border: none;
  color: var(--accent);
  transition: color .3s ease-in-out;

}

/* settings */
#ui-dialog-body.settings {
  text-align: left !important;
  padding: 1.5em !important;
}

#ui-dialog-body.settings button, #ui-dialog-body.restart button {
  background: none;
  border: none;
  text-transform: lowercase;
  color: var(--darkbg);
  letter-spacing: 2px;
  transition: color .3s ease-in-out;
}
.dark #ui-dialog-body.settings button, .dark #ui-dialog-body.restart button, .sun #ui-dialog-body.settings button, .sun #ui-dialog-body.restart button { 
  color: var(--accent);
}

#ui-dialog-body.settings button:hover, #ui-dialog-body.saves button:hover {
  color: var(--accent2) !important;
}

#ui-dialog-body.settings .buttons {
  display: flex;
  justify-content: center;
}

#ui-dialog-body.settings button[id|=setting-control] { 
  background-color: var(--white);
  color: var(--darkbg);
  border: 1px solid var(--darkbg);
}
.dark #ui-dialog-body.settings button[id|=setting-control], .sun #ui-dialog-body.settings button[id|=setting-control] { 
  background-color: var(--darkbg);
  color: var(--white);
  border: 1px solid var(--white);
}

#ui-dialog-body.settings button[id|="setting-control"].enabled {
  background-color: var(--accent2);
  border: 1px solid var(--grey);
  transition: .3s ease-in-out;
}
.dark #ui-dialog-body.settings button[id|="setting-control"].enabled, .sun #ui-dialog-body.settings button[id|="setting-control"].enabled { 
  background-color: var(--accent2);
  border: 1px solid var(--white);
  color: var(--darkbg);
}

#ui-dialog-body.settings button[id|="setting-control"].enabled:hover {
  border: 1px solid var(--grey);
  background: none !important;
}

.dark #ui-dialog-body.settings button[id|="setting-control"].enabled:hover, .sun  #ui-dialog-body.settings button[id|="setting-control"].enabled:hover { 
  border: 1px solid var(--white);
}

#ui-dialog-body #setting-control-theme, #ui-dialog-body #setting-control-fontsize, #ui-dialog-body #setting-control-fontfamily {
  background-color: var(--white);
  border: 1px solid var(--darkbg);
  color: var(--darkbg);
}
.dark #ui-dialog-body #setting-control-theme, .dark #ui-dialog-body #setting-control-fontsize, .dark #ui-dialog-body #setting-control-fontfamily, .sun #ui-dialog-body #setting-control-theme, .sun #ui-dialog-body #setting-control-fontsize, .sun #ui-dialog-body #setting-control-fontfamily { 
  background-color: var(--darkbg);
  border: 1px solid var(--white);
  color: var(--white);
}

#ui-dialog-body #setting-control-theme:hover, #ui-dialog-body #setting-control-fontsize:hover, #ui-dialog-body #setting-control-fontfamily:hover {
  background-color: var(--white);
  border: 1px solid var(--darkbg);
  color: var(--darkbg);
}
.dark #ui-dialog-body #setting-control-theme:hover, .dark #ui-dialog-body #setting-control-fontsize:hover, .dark #ui-dialog-body #setting-control-fontfamily:hover, .sun #ui-dialog-body #setting-control-theme:hover, .sun #ui-dialog-body #setting-control-fontsize:hover, .sun #ui-dialog-body #setting-control-fontfamily:hover { 
  background-color: var(--darkbg);
  border: 1px solid var(--white);
  color: var(--white);
}


/********************************
              MOBILE 
********************************/
@media screen and (max-width: 1200px) {
  #passages { 
    width: 95%;
    max-height: 75vh;
    margin-top: 1em;
  }
  #header { 
    height: 7%;
    justify-content: center;
  }
  #header-links { 
    display: none;
  }
  #game-title { 
    display: none;
  }
  #mobile-title { 
    display: block;
  }
  
  /* FOOTER */
  #footer {
    display: flex;
    background-color: var(--darkbg);
    border-top: 2px solid var(--darkbg);
    position: fixed;
    bottom: 0;
    left: 0;
    height: 6.5%;
    width: 100%;
    display: flex;
    align-items: center;
    padding: 0 20px; 
    box-sizing: border-box;
    justify-content: center;
  }
  .dark #footer { 
    background-color: var(--white);
    border-top: 1px solid var(--white);
  }
  .sun #footer { 
    background-color: var(--accent);
    border-top: 1px solid var(--accent);
  }

  #footer-links { 
    font-family: var(--serif);
    position: absolute;
    display: flex;
    font-size: 15.5px;
    letter-spacing: 2px;
    gap: 2em;
  }

  #footer-links div {
    color: var(--white);
    font-weight: bold;
    position: relative;
    cursor: pointer;
    transition: .3s ease-in-out;
    padding: 5px;
  }
  .dark #footer-links div, .sun #footer-links div {
    color: var(--darkbg);
  }
  
  #footer-links div:hover {
    color: var(--accent2);
  }
  .dark #footer-links div:hover, .sun #footer-links div:hover {
    color: var(--darkbg);
  }
  
  #footer-links div:after {
    content: ' ';
    position: absolute;
    width: 100%;
    transform: scaleX(0);
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: var(--accent2);
    transform-origin: bottom left;
    transition: transform 0.4s ease-out;
  }
  .dark #footer-links div:after, .sun #footer-links div:after {
    background-color: var(--darkbg);
  }
  
  #footer-links div:hover:after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  #navigation-links a { 
    display: block;
    color: var(--darkbg);
    transition: .4s ease-in-out;
    margin-bottom: 18px;
    letter-spacing: 3px;
    font-size: 112%;
  }
  .dark #navigation-links a, .sun #navigation-links a { 
    color: var(--white);
  }
  #navigation-links a:hover { 
    color: var(--accent);
  }

  /* collapsible */
  .collapsible { 
    width: 100%;
  }
  .collapsible span { 
    font-size: 100%;
  }
  .content { 
    width: 100%;
  }

  h2 { 
    font-size: 300%;
  }

  /* choice btn */
  .choice-cont { 
    width: 100%;
  }
}